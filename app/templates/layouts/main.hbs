<!DOCTYPE html>
<!--[if lt IE 7]>      <html lang="{{lang}}" class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html lang="{{lang}}" class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html lang="{{lang}}" class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!--> <html lang="fr" class="no-js"> <!--<![endif]-->
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>{{sitename}} | {{page.name}}</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Place favicon.ico and apple-touch-icon.png in the root directory -->
    <!-- build:css css/vendor.css -->
    <!-- bower:css -->
    <!-- endbower -->
    <!-- endbuild -->

    <!-- build:css css/screen.css -->
    <link rel="stylesheet" href="css/screen.css">
    <!-- endbuild -->

    <% if (includeModernizr) { %>
    <!-- build:js js/vendor/modernizr.js -->
    <script src="/bower_components/modernizr/modernizr.js"></script>
    <!-- endbuild -->
    <% } %>
  </head>
  <body>
    <div class="main-wrapper">
    {{> header}}
    {% body %}
    {{> footer}}
    </div><!-- end .main-wrapper -->

    <!-- build:js js/vendor.js -->
    <% if (includeJQuery) { %>
    <!-- bower:js -->
    <script src="/bower_components/jquery/dist/jquery.js"></script>
    <!-- endbower -->
    <% } %>
    <!-- endbuild -->

    <!-- build:js js/app.js -->
    <script src="js/app.js"></script>
    <!-- endbuild -->

    {{#if page.script}}
    {{#each page.script}}
    <!-- build:js js/{{this}}.js -->
    <script src="js/{{this}}.js"></script>
    <!-- endbuild -->
    {{/each}}
    {{/if}}
    {{> ganalytics }}
  </body>
</html>
